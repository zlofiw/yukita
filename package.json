{
  "name": "yukita",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "description": "YukiTa audio platform monorepo: core, protocol, gateway, connectors and plugins.",
  "scripts": {
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "test:unit": "pnpm -r test:unit",
    "test:integration": "pnpm --filter @yukita/core test:integration",
    "check": "pnpm lint && pnpm typecheck && pnpm test && pnpm build && pnpm docs:build",
    "ci": "pnpm check",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "version:all": "node scripts/set-version.mjs"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.5",
    "@types/ws": "^8.5.14",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitepress": "^1.6.4",
    "vitest": "^2.1.8"
  }
}
