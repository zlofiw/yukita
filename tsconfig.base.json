{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@yukita/plugin-kit": [
        "packages/plugin-kit/src/index.ts"
      ],
      "@yukita/protocol": [
        "packages/protocol/src/index.ts"
      ],
      "@yukita/core": [
        "packages/core/src/index.ts"
      ],
      "@yukita/gateway": [
        "packages/gateway/src/index.ts"
      ],
      "@yukita/connector-discord": [
        "packages/connectors/connector-discord/src/index.ts"
      ],
      "@yukita/plugins-metrics": [
        "packages/plugins/metrics/src/index.ts"
      ],
      "@yukita/plugins-resolve-cache": [
        "packages/plugins/resolve-cache/src/index.ts"
      ]
    },
    "lib": [
      "ES2022"
    ],
    "strict": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
